{
  "name": "auris",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "setup": "./setup.sh",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "waveforms:generate": "node --env-file=/etc/default/auris scripts/generate-waveforms.mjs",
    "waveforms:regenerate": "node --env-file=/etc/default/auris scripts/generate-waveforms.mjs --force",
    "waveforms:clear": "node --env-file=/etc/default/auris scripts/generate-waveforms.mjs --clear",
    "stop": "ss -tlnp 'sport = :3000' | grep -oP 'pid=\\K[0-9]+' | xargs -r kill"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "lucide-react": "^0.575.0",
    "next": "^16.1.6",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.5.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.2.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.3.2",
    "@types/react": "^19.2.14",
    "drizzle-kit": "^0.31.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.2.1",
    "typescript": "^5.9.3"
  }
}
